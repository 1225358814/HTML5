/*轮播图*/
.home_scroll{
	width: 100%;
}
.swiper-slide a{
	width: 100%;
}
.swiper-slide a img{
	width: 100%;
}
/*加入我们主体*/
.join_about{
	width: 100%;
	border: 1px solid silver;
	background: url(../img/join1.png) no-repeat;
	background-size: 100%;
	padding: 3% 0;
}
.join_about p{
	font-size: 1.7rem;
	line-height: 3rem;
	max-width: 1180px;
	margin: 0 auto;
	padding: 0 10%;
}
.join_font1{
	color: #EC6A17;
}
.join_wrap{
	background-color: #F2F2F2;
	margin: 0 auto;
	padding: 5% 1%;
}
.join_choose{
	width: 30%;
	border: 1px solid silver;
	text-align: center;
}
.join_choose_border{
	padding: 10%;
	border: 1px solid silver;
	border-radius: 100%;
}
